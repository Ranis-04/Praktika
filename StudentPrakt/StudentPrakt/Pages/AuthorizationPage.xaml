<Page x:Class="StudentPrakt.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentPrakt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" Background="AliceBlue">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" Margin="0 50" FontSize="25"/>
        </StackPanel>
        <StackPanel Margin="100 130 100 0" HorizontalAlignment="Center">
            <TextBlock Text="Логин" FontSize="18" Margin="0 10 0 10"/>
            <TextBox x:Name="LoginAUT" Height="23" VerticalContentAlignment="Center" Width="300" HorizontalAlignment="Left"/>
            <TextBlock Text="Пароль" FontSize="18" Margin="0 10 0 10"/>
            <TextBox x:Name="PaswordAUT" Height="23" VerticalContentAlignment="Center" Width="300" HorizontalAlignment="Left"/>

            <Button x:Name="btnVxod" Content="Войти" FontSize="18" Width="270"  Click="btnVxod_Click" Margin="0 40 0 0"/>
        </StackPanel>
    </Grid>
</Page>
